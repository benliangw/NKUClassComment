.card {
    background: #fff;
    margin: 20rpx 28rpx;
    padding: 40rpx 32rpx;
    border-radius: 2%;
    background: #fff;
    width:85%;
}

page, view {
    font-family: arial,'pingfang sc',stheiti,"microsoft yahei",sans-serif
}
page {
    background: #e0e0e0;
}
.title{
    display: flex;
    padding-left:20rpx;
    padding-top:10rpx;
    padding-bottom:20rpx;
    justify-content: space-start;
}
.classname{
    font-size:35rpx;
    font-family: Georgia;
    width:65%;
}
.para {
    word-break: break-all;
    font-size: 30rpx;
    color:#aaa;
    padding-bottom: 10rpx;
    padding-top: 5rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:4;
    text-overflow: ellipsis;
    overflow: hidden;
    padding: 0rpx 20rpx;

}
.bottom {
  padding-top:20rpx;
  padding-bottom: 10rpx;
  padding-left:20rpx;
}
.time {
    font-size: .9em;
    color: #0e61af;
    margin-top:100rpx;
}
.star {
  font-size: .9em;
  color: #0e31af;
  padding-left:220rpx;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  background: #fff;
  margin: 0rpx 70rpx;
  border-radius: 2%;
  display: flex;
  flex-direction:column;
  justify-content:center;
  width: 80%;
  overflow: hidden;
  position: fixed;
  z-index: 2000;
  bottom:10rpx;
}
.button, .delete-button {
  width: 100%;
}
.delete-button {
  color: #FF0000;
}