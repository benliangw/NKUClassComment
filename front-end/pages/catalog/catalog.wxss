.course-panel{
  padding-bottom: 0rpx;
}

.search-box {
  position: relative;
}

.flex-wrp {
  display: flex;
}


.i-user-head {
	flex: 1;
	border-radius: 100%;
}
.i-user-head .i-avatar-img {
	width:56rpx;
	height:56rpx;
	display:block;
	border-radius:100%;
	border:4rpx solid #fff;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.search-box .search-frame input {
	width: 448rpx;
}


.card {
    background: #fff;
    margin: 20rpx 28rpx;
    padding: 40rpx 32rpx;
    border-radius: 2%;
    background: #fff;
}


page, view {
    font-family: arial,'pingfang sc',stheiti,"microsoft yahei",sans-serif
}
page {
    background: #e0e0e0;
}
.para {
    word-break: break-all;
    font-size: 30rpx;
    color:#aaa;
    padding-bottom: 10rpx;
    padding-top: 5rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:4;
    text-overflow: ellipsis;
    overflow: hidden;
}
.time {
    font-size: .9em;
    color: #0e61af;
}
.star {
  position: absolute;
  left:300rpx;
  width:50%;
  font-size: .9em;
  color: #0e31af;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bottom {
  padding-top:20rpx;
  padding-bottom: 10rpx;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  background: #fff;
  margin: 0rpx 70rpx;
  border-radius: 2%;
  display: flex;
  flex-direction:column;
  justify-content:center;
  width: 80%;
  overflow: hidden;
  position: fixed;
  z-index: 2000;
  bottom:10rpx;
}
.button, .delete-button {
  width: 100%;
}
.delete-button {
  color: #FF0000;
}
